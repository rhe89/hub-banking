@inherits LayoutComponentBase

@inject NavigationManager _navigationManager
<PageTitle>Banking</PageTitle>
<MudThemeProvider />
<MudDialogProvider
    FullWidth="true"
    MaxWidth="MaxWidth.Large"
    CloseButton="true"
    Position="DialogPosition.TopCenter"/>
<MudSnackbarProvider />

<div class="page">
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div class="container container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="#">Dashboard</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/accounts">Accounts</NavLink>
                </li>
                <li>
                    <MudNavGroup Title="Transactions" Expanded="TransactionsOpen">
                        <NavLink class="nav-link dropdown-item" href="/transactions">Transactions</NavLink>
                        <NavLink class="nav-link dropdown-item" href="/recurringtransactions">Recurring transactions</NavLink>
                    </MudNavGroup>
                </li>
            </ul>
        </div>
    </nav>
    <div class="main">
        <article class="content px-4 mb-5">
            @Body
        </article>
    </div>
</div>

@code {
    private bool TransactionsOpen => _navigationManager.Uri.Contains("transactions");
}